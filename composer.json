{
  "name": "juststeveking/php-sdk",
  "description": "A base sdk for your PHP SDKs",
  "keywords": [
    "http",
    "sdk",
    "psr18",
    "psr-18"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "role": "developer",
      "name": "Steve McDougall",
      "email": "juststevemcd@gmail.com",
      "homepage": "https://www.juststeveking.uk/"
    }
  ],
  "require": {
    "php": "^8.1",
    "juststeveking/http-auth-strategies": "^v1.2",
    "juststeveking/http-slim": "^2.0",
    "juststeveking/uri-builder": "^2.0",
    "phpfox/container": "^0.2.0"
  },
  "require-dev": {
    "nyholm/psr7": "^1.4",
    "pestphp/pest": "^1.21",
    "symfony/http-client": "^v6.0",
    "symfony/var-dumper": "^v6.0"
  },
  "autoload": {
    "psr-4": {
      "JustSteveKing\\PhpSdk\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JustSteveKing\\PhpSdk\\Tests\\": "tests/",
      "Demo\\": "demo/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --testdox --coverage-html build/coverage"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true
  }
}
